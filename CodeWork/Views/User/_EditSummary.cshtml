@model CodeWork.ViewModels.SummaryViewModel

    <div class="edit-content">

        @using (Html.BeginForm("UpdateSummary", "User"))
        {
            @Html.HiddenFor(m => m.ProfileId)

            <div class="form-group">
                @Html.TextAreaFor(m => m.Summary, new { @class = "form-control", placeholder = "Enter your Professional Summary... (max 1024 characters)" })
            </div>

            <div class="form_buttons">
                <button class="btn btn-success">Save Changes</button>
                <div class="btn btn-danger" id="js-cancel">Cancel</div>
            </div>
        }


    </div>
