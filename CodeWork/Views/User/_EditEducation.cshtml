
@model CodeWork.ViewModels.EducationInfoViewModel

<div class="edit-content">


    @using (Html.BeginForm("UpdateEducation", "User"))
    {
        @Html.HiddenFor(m => m.ProfileId)
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Education.DegreeTitleId)
            @Html.DropDownListFor(m => m.Education.DegreeTitleId, new SelectList(Model.DegreeTitles, "Id", "Name"), new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Education.DegreeTitleId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Education.FieldOfStudy)
            @Html.TextBoxFor(m => m.Education.FieldOfStudy, new { @class = "form-control", placeholder = "like Computer Science, Information Technology, etc.." })
            @Html.ValidationMessageFor(m => m.Education.FieldOfStudy, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Education.InstitutionName)
            @Html.TextBoxFor(m => m.Education.InstitutionName, new { @class = "form-control", placeholder = "like Punjab University, etc..." })
            @Html.ValidationMessageFor(m => m.Education.InstitutionName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Education.Location)
            @Html.TextBoxFor(m => m.Education.Location, new { @class = "form-control", placeholder = "like Lahore, etc..." })
            @Html.ValidationMessageFor(m => m.Education.Location, "", new { @class = "text-danger" })
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Education.StartDate)
                    @Html.TextBoxFor(m => m.Education.StartDate, new { @class = "form-control", @type = "date" })
                    @Html.ValidationMessageFor(m => m.Education.StartDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Education.EndDate)
                    @Html.TextBoxFor(m => m.Education.EndDate, new { @class = "form-control", @type = "date" })
                    @Html.ValidationMessageFor(m => m.Education.EndDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Education.Grade)
            @Html.TextBoxFor(m => m.Education.Grade, new { @class = "form-control", placeholder = "Add your Grade (Optional)" })
            @Html.ValidationMessageFor(m => m.Education.Grade, "", new { @class = "text-danger" })
        </div>

        <div class="form_buttons">
            <button class="btn btn-success">Save Changes</button>
            <div class="btn btn-danger" id="js-cancel">Cancel</div>
        </div>
    }


</div>
