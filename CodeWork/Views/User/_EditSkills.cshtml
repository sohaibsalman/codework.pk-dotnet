@model CodeWork.ViewModels.SkillsInfoViewModel


    <div class="edit-content">

        @using (Html.BeginForm("UpdateSkills", "User"))
        {
            @Html.HiddenFor(m => m.ProfileId)
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Skill.Name)
                @Html.TextBoxFor(m => m.Skill.Name, new { @class = "form-control", placeholder = "like .NET, JAVA, etc.." })
                @Html.ValidationMessageFor(m => m.Skill.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Skill.SkillLevelId)
                @Html.DropDownListFor(m => m.Skill.SkillLevelId, new SelectList(Model.SkillLevels, "Id", "Name"), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Skill.SkillLevelId, "", new { @class = "text-danger" })
            </div>

            <div class="form_buttons">
                <button class="btn btn-success">Save Changes</button>
                <div class="btn btn-danger" id="js-cancel">Cancel</div>
            </div>
        }


    </div>
