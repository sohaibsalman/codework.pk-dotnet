@model CodeWork.ViewModels.JobInfoViewModel
    
    <div class="edit-content">

        @using (Html.BeginForm("UpdateJob", "User"))
        {

            @Html.HiddenFor(m => m.ProfileId)
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Experience.JobTitle)
                @Html.TextBoxFor(m => m.Experience.JobTitle, new { @class = "form-control", placeholder = "like Full Stack Developer, etc.." })
                @Html.ValidationMessageFor(m => m.Experience.JobTitle, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Experience.IndustryId)
                @Html.DropDownListFor(m => m.Experience.IndustryId, new SelectList(Model.Industries, "Id", "Name"), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Experience.IndustryId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Experience.CompanyName)
                @Html.TextBoxFor(m => m.Experience.CompanyName, new { @class = "form-control", placeholder = "like Microsoft, etc.." })
                @Html.ValidationMessageFor(m => m.Experience.CompanyName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Experience.Location)
                @Html.TextBoxFor(m => m.Experience.Location, new { @class = "form-control", placeholder = "like Lahore, etc.." })
                @Html.ValidationMessageFor(m => m.Experience.Location, "", new { @class = "text-danger" })
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Experience.StartDate)
                        @Html.TextBoxFor(m => m.Experience.StartDate, new { @class = "form-control", @type = "date" })
                        @Html.ValidationMessageFor(m => m.Experience.StartDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Experience.EndDate)
                        @Html.TextBoxFor(m => m.Experience.EndDate, new { @class = "form-control", @type = "date" })
                        @Html.ValidationMessageFor(m => m.Experience.EndDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.Experience.IsCurrentlyWorking) Currently Working Here?
                </label>
            </div>

            <div class="form_buttons">
                <button class="btn btn-success">Save Changes</button>
                <div class="btn btn-danger" id="js-cancel">Cancel</div>
            </div>
        }

    </div>